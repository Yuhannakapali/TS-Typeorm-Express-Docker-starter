{
  "name": "arriana",
  "version": "1.0.0",
  "description": "its a hospital management backend",
  "main": "index.js",
  "Author": "yuhanna kapali <yuhannakapali@gmail.com>",
  "scripts": {
    "build": "tsc ",
    "serve": "node dist/src/index.js",
    "start": "npm install && npm run build &&  npm run copy-assets && npm run serve",
    "watch": "tsc -w",
    "lint": "eslint",
    "copy-assets": "ts-node copy-assets.ts",
    "dev": "ts-node src/index.ts",
    "dev:watch": " nodemon --exec ts-node src/index.ts",
    "test": "jest"
  },
  "author": "yuhanna",
  "license": "ISC",
  "dependencies": {
    "app-root-path": "^3.0.0",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "helmet": "^4.6.0",
    "lodash": "^4.17.21",
    "morgan": "^1.10.0",
    "pg": "^8.7.1",
    "typeorm": "^0.2.37",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@types/app-root-path": "^1.2.4",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.0.1",
    "@types/lodash": "^4.14.172",
    "@types/morgan": "^1.9.3",
    "@types/node": "^16.6.2",
    "@types/shelljs": "^0.8.9",
    "@typescript-eslint/eslint-plugin": "^4.29.2",
    "@typescript-eslint/parser": "^4.29.2",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.24.0",
    "jest": "^27.0.6",
    "nodemon": "^2.0.12",
    "shelljs": "^0.8.4",
    "ts-jest": "^27.0.5",
    "ts-node": "^10.2.1",
    "typescript": "^4.3.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
